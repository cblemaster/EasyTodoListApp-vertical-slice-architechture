<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EasyTodoListApp.UI.Desktop.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:EasyTodoListApp.UI.Desktop.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="Easy Todo List">
    <ShellContent
        Title="Not complete"
        ContentTemplate="{DataTemplate pages:AllTodosNotCompletePage}"
        Route="NotComplete" />
    <ShellContent
        Title="Due today"
        ContentTemplate="{DataTemplate pages:AllTodosDueTodayPage}"
        Route="DueToday" />
    <ShellContent
        Title="Important"
        ContentTemplate="{DataTemplate pages:AllTodosImportantPage}"
        Route="Important" />
    <ShellContent
        Title="Complete"
        ContentTemplate="{DataTemplate pages:AllTodosCompletePage}"
        Route="Complete" />
    <ShellContent
        Title="Overdue"
        ContentTemplate="{DataTemplate pages:AllTodosOverduePage}"
        Route="Overdue" />
</Shell>
