<UserControl x:Class="EasyTodoListApp.Desktop.Controls.TodoListControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:EasyTodoListApp.Desktop.Converters"
             xmlns:controls="clr-namespace:EasyTodoListApp.Desktop.Controls"
             DataContext="{x:Type controls:TodoListControlModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450"
             d:DesignWidth="800">
    <UserControl.Resources>
        <converters:NullableDateOnlyToStringConverter x:Key="NullableDateOnlyToStringConverter"/>
        <converters:NullableDateTimeToStringConverter x:Key="NullableDateTimeToStringConverter"/>
        <converters:BoolToYesNoConverter x:Key="BoolToYesNoConverter"/>
        <ControlTemplate x:Key="TodoControl"
                         TargetType="ItemsControl">
            <Grid Width="300"
                  Height="169"
                  Background="LightGoldenrodYellow">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <TextBlock Grid.ColumnSpan="2"
                           Text="{Binding Description, Mode=OneWay}"
                           FontWeight="Bold"
                           TextWrapping="Wrap"
                           Margin="10,10,0,0"/>
                <StackPanel Grid.Row="1" Margin="10,10,0,0">
                    <TextBlock Text="{Binding DueDate, Mode=OneWay,  Converter={StaticResource NullableDateOnlyToStringConverter}, StringFormat='due date: {0}'}"
                               TextWrapping="Wrap"/>
                    <Label Content="{Binding IsImportant, Mode=OneWay, Converter={StaticResource BoolToYesNoConverter}, StringFormat='important: {0}'}"/>
                    <Label Content="{Binding IsComplete, Mode=OneWay, Converter={StaticResource BoolToYesNoConverter}, StringFormat='complete: {0}'}"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Grid.Row="1" Margin="10,10,0,0">
                    <TextBlock Text="{Binding CreateDate, Mode=OneWay, StringFormat=create date: {0:D}}"
                               TextWrapping="Wrap"/>
                    <TextBlock Text="{Binding UpdateDate, Mode=OneWay, Converter={StaticResource NullableDateOnlyToStringConverter}, StringFormat=update date: {0}}"
                               TextWrapping="Wrap"/>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="update"/>
                        <Button Content="delete"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </ControlTemplate>
    </UserControl.Resources>
    <Grid>
        <ListBox HorizontalAlignment="Center">
            <ItemsControl Template="{StaticResource TodoControl}"/>
        </ListBox>
    </Grid>
</UserControl>
