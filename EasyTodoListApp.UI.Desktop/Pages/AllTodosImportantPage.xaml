<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             xmlns:views="clr-namespace:EasyTodoListApp.UI.Desktop.Views"
             xmlns:pagemodels="clr-namespace:EasyTodoListApp.UI.Desktop.PageModels"
             x:Class="EasyTodoListApp.UI.Desktop.Pages.AllTodosImportantPage"
             x:DataType="{x:Type pagemodels:AllTodosImportantPageModel}"
             Title="Important">
    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior EventName="Appearing" Command="{Binding PageAppearingCommand, Mode=OneWay}" />
    </ContentPage.Behaviors>
    <views:TodosCollectionView />
</ContentPage>
